---
import { getCollection } from 'astro:content';
import Layout from '../layouts/Layout.astro';
import PostCard from '../components/PostCard.astro';

const allPosts = await getCollection('blog', ({ data }) => !data.draft);
const recentPosts = allPosts
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
  .slice(0, 3);
---

<Layout
  title="Mabel — Developer & Student"
  description="Hi, I'm Mabel. I build things with code and write about what I learn."
>
  <!-- Hero -->
  <section class="hero">
    <div class="hero-inner container--wide container">

      <div class="hero-eyebrow reveal">
        <span class="eyebrow-line"></span>
        <span class="eyebrow-text">developer · student · berkeley, ca</span>
      </div>

      <div class="hero-title-wrap">
        <h1 class="hero-title reveal reveal-d1">
          <em>Mabel.</em>
        </h1>
      </div>

      <div class="hero-below reveal reveal-d2">
        <div class="hero-bio">
          <p>
            I build things with code, study data and information systems,
            and write about what I learn along the way.
          </p>
          <div class="hero-actions">
            <a href="/projects" class="btn btn-primary"><span>View Projects</span></a>
            <a href="/about" class="btn btn-outline"><span>About Me</span></a>
          </div>
        </div>

        <dl class="hero-stats reveal reveal-d3">
          <div class="stat-row">
            <dt>Focus</dt>
            <dd>Data Science &amp; HCI</dd>
          </div>
          <div class="stat-row">
            <dt>School</dt>
            <dd>UC Berkeley, I School</dd>
          </div>
          <div class="stat-row">
            <dt>Stack</dt>
            <dd>Python · JS · SQL</dd>
          </div>
          <div class="stat-row">
            <dt>Status</dt>
            <dd class="stat-available">Open to collaborate</dd>
          </div>
        </dl>
      </div>

    </div>
  </section>

  <!-- Marquee -->
  <div class="marquee-band" aria-hidden="true">
    <div class="marquee-track">
      {[1, 2].map(() => (
        <span class="marquee-item">mabel <em>·</em> developer <em>·</em> student <em>·</em> berkeley, ca <em>·</em> data science <em>·</em> web <em>·</em> open to collaborate <em>·</em> 2026 <em>·</em>&nbsp;</span>
      ))}
    </div>
  </div>

  <!-- Recent Writing -->
  {recentPosts.length > 0 && (
    <section class="writing">
      <div class="container">
        <div class="writing-header reveal">
          <div class="section-kicker">
            <span class="kicker-index">§ 01</span>
            <span class="kicker-label">Recent Writing</span>
          </div>
          <a href="/blog" class="writing-all">All posts →</a>
        </div>

        <div class="post-list">
          {recentPosts.map((post, i) => (
            <div class={`reveal reveal-d${i + 1}`}>
              <PostCard
                title={post.data.title}
                description={post.data.description}
                pubDate={post.data.pubDate}
                slug={post.slug}
                tags={post.data.tags}
              />
            </div>
          ))}
        </div>
      </div>
    </section>
  )}
</Layout>

<style>
  /* ── Hero ─────────────────────────────────── */
  .hero {
    padding: 5rem 0 0;
  }

  .hero-eyebrow {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-bottom: 2rem;
  }

  .eyebrow-line {
    display: block;
    width: 32px;
    height: 1px;
    background: var(--rose);
    flex-shrink: 0;
  }

  .eyebrow-text {
    font-family: var(--font-mono);
    font-size: 0.68rem;
    letter-spacing: 0.1em;
    color: var(--ink-2);
    text-transform: uppercase;
  }

  /* Giant title — full bleed, not contained */
  .hero-title-wrap {
    overflow: hidden;
    margin: 0 -2rem 0;
    padding: 0 2rem;
  }

  .hero-title {
    font-family: var(--font-display);
    font-weight: 300;
    font-style: italic;
    font-size: clamp(6rem, 22vw, 18rem);
    line-height: 0.85;
    letter-spacing: -0.035em;
    color: var(--ink);
    margin: 0;
    white-space: nowrap;
  }

  /* Bio + stats row */
  .hero-below {
    display: grid;
    grid-template-columns: 1fr auto;
    gap: 4rem;
    align-items: start;
    padding-top: 2rem;
    padding-bottom: 3.5rem;
    margin-top: 2rem;
    border-top: 1px solid var(--border-soft);
  }

  .hero-bio p {
    font-family: var(--font-display);
    font-size: clamp(1.05rem, 2vw, 1.25rem);
    line-height: 1.7;
    color: var(--ink-2);
    max-width: 44ch;
    margin-bottom: 2rem;
    font-weight: 400;
  }

  .hero-actions {
    display: flex;
    gap: 0.75rem;
    flex-wrap: wrap;
  }

  /* Stats */
  .hero-stats {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    min-width: 200px;
    border-left: 1px solid var(--border-soft);
    padding-left: 2rem;
    padding-top: 0.25rem;
  }

  .stat-row {
    display: flex;
    flex-direction: column;
    gap: 0.1rem;
  }

  .stat-row dt {
    font-family: var(--font-mono);
    font-size: 0.62rem;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    color: var(--ink-3);
  }

  .stat-row dd {
    font-family: var(--font-display);
    font-size: 0.95rem;
    font-weight: 400;
    color: var(--ink);
    letter-spacing: 0.01em;
  }

  .stat-available {
    color: var(--rose) !important;
    font-style: italic;
  }

  /* ── Writing ──────────────────────────────── */
  .writing {
    padding: 4rem 0 5rem;
  }

  .writing-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding-bottom: 1rem;
    border-bottom: 1px solid var(--border-soft);
    margin-bottom: 0;
    gap: 1rem;
  }

  .section-kicker {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .kicker-index {
    font-family: var(--font-mono);
    font-size: 0.65rem;
    letter-spacing: 0.08em;
    color: var(--rose);
  }

  .kicker-label {
    font-family: var(--font-display);
    font-size: 0.85rem;
    font-weight: 600;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    color: var(--ink-2);
  }

  .writing-all {
    font-family: var(--font-ui);
    font-size: 0.78rem;
    color: var(--ink-2);
    text-decoration: none;
    white-space: nowrap;
    transition: color 0.2s ease;
  }

  .writing-all:hover { color: var(--rose); }

  .post-list {
    display: flex;
    flex-direction: column;
  }

  /* ── Responsive ──────────────────────────── */
  @media (max-width: 640px) {
    .hero-below {
      grid-template-columns: 1fr;
      gap: 2rem;
    }

    .hero-stats {
      border-left: none;
      border-top: 1px solid var(--border-soft);
      padding-left: 0;
      padding-top: 1.5rem;
      display: grid;
      grid-template-columns: 1fr 1fr;
    }
  }
</style>
